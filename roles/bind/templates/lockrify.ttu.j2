$TTL	604800
{{ domain_name }}.	IN	SOA	vm1.{{ domain_name }}. yuto.{{ domain_name }}. (
			      1		; Serial
			 604800		; Refresh
			  86400		; Retry
			2419200		; Expire
			 604800 )	; Negative Cache TTL
;
{% for vm in groups['bind_servers'] %}
{{ domain_name }}.	IN	NS	{{ vm }}
{% endfor %}

{% for vm in groups['all'] %}
{{ vm }}	IN	A	{{ hostvars[vm]['ansible_default_ipv4']['address'] }}
{% endfor %}